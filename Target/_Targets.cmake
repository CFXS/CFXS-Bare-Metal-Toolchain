include(${CMAKE_CURRENT_LIST_DIR}/Part/${CFXS_PART}.cmake)

if("${CFXS_CORE}" STREQUAL "Cortex-M3")
    include(${CMAKE_CURRENT_LIST_DIR}/Core/CortexM3.cmake)
    CFXS_SetTarget_CortexM3()
elseif("${CFXS_CORE}" STREQUAL "Cortex-M4")
    include(${CMAKE_CURRENT_LIST_DIR}/Core/CortexM4.cmake)
    CFXS_SetTarget_CortexM4()
elseif("${CFXS_CORE}" STREQUAL "Cortex-M4F")
    include(${CMAKE_CURRENT_LIST_DIR}/Core/CortexM4F.cmake)
    CFXS_SetTarget_CortexM4F()
elseif("${CFXS_CORE}" STREQUAL "Cortex-M7")
    include(${CMAKE_CURRENT_LIST_DIR}/Core/CortexM7.cmake)
    CFXS_SetTarget_CortexM7()
else()
    message(FATAL_ERROR "Unknown CFXS_CORE: [${CFXS_CORE}]")
endif()
